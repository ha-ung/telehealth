<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_marginTop="20dp"
    android:padding="12dp"
    android:background="#cfe6df">
    <TextView
        android:id="@+id/monitor_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:textSize="20sp"
        android:text="Monitor #1" />
    <TextView
        android:id="@+id/monitor_symptoms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:paddingLeft="12dp"
        android:text="Symptoms: Cough, Sneeze"/>
    <TextView
        android:id="@+id/monitor_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:textSize="16sp"
        android:paddingLeft="12dp"
        android:layout_marginTop="10dp"
        android:text="Note: Headache happens at night"/>
    <TextView
        android:id="@+id/monitor_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:textSize="16sp"
        android:paddingLeft="12dp"
        android:layout_marginTop="10dp"
        android:text="Date: 01/11/2022"/>
</androidx.appcompat.widget.LinearLayoutCompat>